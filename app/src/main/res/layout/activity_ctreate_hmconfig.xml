<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polito.cesarldm.tfg_bitadroidbeta.CtreateHMConfigActivity"
    android:background="@color/colorPrimaryLight"
    android:padding="5dp">
    <TextView
        android:id="@+id/ch_1"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:text="A1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="3dp"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:id="@+id/ch_2"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:text="A2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ch_1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:id="@+id/ch_3"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:text="A3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ch_2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/ch_4"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:text="A4"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ch_3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/ch_5"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:text="A5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ch_4"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:id="@+id/ch_6"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:text="A6"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ch_5"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:textColor="@color/colorAccent"/>
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/ch_1"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="32dp"
        />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/ch_2"
        android:layout_marginEnd="3dp"
        android:layout_below="@+id/ch_1"
        android:layout_marginTop="3dp"/>
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/ch_3"
        android:layout_below="@+id/ch_2"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"/>
    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/ch_4"
        android:layout_below="@+id/ch_3"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"/>
    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/ch_5"
        android:layout_below="@+id/ch_4"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"/>
    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/ch_6"
        android:layout_below="@+id/ch_5"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/spinner1"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="5dp"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/spinner2"
        android:layout_below="@+id/ch_1"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"/>

    <Switch
        android:id="@+id/switch3"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/spinner3"
        android:layout_below="@+id/ch_2"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"/>

    <Switch
        android:id="@+id/switch4"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/spinner4"
        android:layout_below="@+id/ch_3"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"/>

    <Switch
        android:id="@+id/switch5"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/spinner5"
        android:layout_below="@+id/ch_4"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"/>

    <Switch
        android:id="@+id/switch6"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_toEndOf="@id/spinner6"
        android:layout_below="@+id/ch_5"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/btn_CC_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_below="@id/ch_6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/elevated_button_shape"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>
