<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:id="@+id/cv"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/card_shape"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_card_image"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorPrimary"
            android:layout_marginEnd="3dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_card_continue"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="2dp"
            android:textSize="15sp"
            android:layout_toStartOf="@+id/iv_card_continue"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_conf_card"
            android:textColor="@color/colorPrimary"
            android:layout_toEndOf="@+id/iv_card_image"
            android:textSize="25sp"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_sampled"
            android:src="@drawable/ic_recording"
            android:tint="@color/colorAccent"
            android:layout_below="@id/name_conf_card"
            android:layout_toEndOf="@+id/iv_card_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sampled"
            android:layout_toEndOf="@+id/iv_sampled"
            android:layout_alignBottom="@+id/iv_sampled"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/iv_channel_sampled_dot"
            android:src="@drawable/ic_channel_active"
            android:tint="@color/colorAccent"
            android:layout_below="@id/name_conf_card"
            android:layout_toEndOf="@+id/tv_sampled"
            android:layout_alignBottom="@+id/tv_sampled"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_shown"
            android:src="@drawable/ic_shown_eye"
            android:tint="@color/colorAccent"
            android:layout_below="@id/iv_sampled"
            android:layout_toEndOf="@+id/iv_card_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shown"
            android:layout_toEndOf="@+id/iv_shown"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/iv_shown"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/iv_channel_shown_dot"
            android:src="@drawable/ic_channel_active"
            android:tint="@color/colorAccent"
            android:layout_below="@id/iv_channel_sampled_dot"
            android:layout_alignStart="@id/iv_channel_sampled_dot"
            android:layout_toEndOf="@id/tv_shown"
            android:layout_alignBottom="@+id/tv_shown"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_channels_sampled"
            android:layout_toEndOf="@+id/iv_channel_sampled_dot"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="12sp"
            android:layout_marginStart="2dp"
            android:layout_alignBaseline="@+id/tv_sampled"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_channels_shown"
            android:layout_toEndOf="@+id/iv_channel_shown_dot"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginStart="2dp"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/tv_shown"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>