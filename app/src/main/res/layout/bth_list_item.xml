<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_BDLI_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        app:srcCompat="@android:drawable/stat_sys_data_bluetooth" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:id="@+id/tv_BDLI_name"
        android:layout_toRightOf="@id/iv_BDLI_image"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:id="@+id/tv_BDLI_address"
        android:layout_below="@id/tv_BDLI_name"
        android:layout_alignEnd="@id/tv_BDLI_name"
        android:layout_alignStart="@id/tv_BDLI_name"
        android:textColor="@color/cardview_light_background"
        />

</RelativeLayout>