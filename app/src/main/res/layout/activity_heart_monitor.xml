<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polito.cesarldm.tfg_bitadroidbeta.HeartMonitorActivity">
    <Button
        android:id="@+id/btn_HM_start"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:text="Start"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.07" />

    <Button
        android:id="@+id/btn_HM_Stop"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:text="Pause"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_HM_start"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout1"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintVertical_bias="0.6" />
    <Button
        android:id="@+id/btn_HM_end"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:text="Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_HM_Stop"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.008" />

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"

        android:layout_marginTop="8dp"
        android:format="%s"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintLeft_toRightOf="@+id/btn_HM_Stop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />

    <RelativeLayout
        android:id="@+id/relativeLayout_HM"
        android:layout_width="326dp"
        android:layout_height="205dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        >


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="326dp"
        android:layout_height="205dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_HM_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_HM"

        app:layout_constraintRight_toRightOf="parent">


        <TextView
            android:id="@+id/tv_HM_bpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:text="Bpm"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_HM_rr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_HM_bpm"
            android:layout_margin="10dp"
            android:text="RR"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_HM_latlon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_HM_rr"
            android:layout_margin="10dp"
            android:text="Location:" />

        <Button
            android:id="@+id/bt_HM_map"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="M"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentStart="true" />

    </RelativeLayout>>

</android.support.constraint.ConstraintLayout>
