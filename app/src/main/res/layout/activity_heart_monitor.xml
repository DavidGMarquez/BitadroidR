<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polito.cesarldm.tfg_bitadroidbeta.HeartMonitorActivity">
    <Button
        android:id="@+id/btn_HM_start"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Start"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.235" />

    <Button
        android:id="@+id/btn_HM_Stop"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Stop"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_HM_start"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout1"
        app:layout_constraintHorizontal_bias="0.398" />

    <RelativeLayout
        android:id="@+id/relativeLayout_HM"
        android:layout_width="326dp"
        android:layout_height="205dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="326dp"
        android:layout_height="205dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_HM_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_HM"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">


        <RelativeLayout
            android:id="@+id/rl_secondGraph"
            android:layout_width="369dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_HM_bpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rl_secondGraph"
            android:text="Bpm"
            android:textSize="20sp"/>

        <Chronometer
            android:id="@+id/chronometer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/rl_secondGraph"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="3dp"
            android:format="%s"
            android:textColorHighlight="@color/colorAccent"
            android:textSize="20sp"

            android:visibility="visible" />

    </RelativeLayout>>

</android.support.constraint.ConstraintLayout>
