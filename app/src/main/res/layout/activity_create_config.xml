            android:id="@+id/radioButton10"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="10 Hz" />

        <RadioButton
            android:id="@+id/radioButton100"
            android:layout_width="109dp"
