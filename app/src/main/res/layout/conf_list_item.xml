<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_margin="10dp">


    <TextView
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:id="@+id/tv_CLI_name"
        android:layout_toRightOf="@id/iv_BDLI_image"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:id="@+id/tv_CLI_channels"
        android:layout_below="@id/tv_CLI_name"
        android:layout_alignEnd="@id/tv_BDLI_name"
        android:textColor="@color/cardview_light_background" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:id="@+id/tv_CLI_sampleRate"
        android:layout_toRightOf="@id/tv_CLI_name"
        android:layout_alignEnd="@id/tv_BDLI_name"
        android:textColor="@color/cardview_light_background" />


</RelativeLayout>