<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:id="@+id/cv"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/card_shape"
        android:clickable="true"
        android:focusable="true"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_card_imager"
            android:src="@drawable/ic_file"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorPrimaryDark"
            android:layout_marginEnd="3dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_card_continuer"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_share"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dater"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="2dp"
            android:textSize="15sp"
            android:layout_toStartOf="@+id/iv_card_continuer"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_conf_cardr"
            android:textColor="@color/colorPrimary"
            android:layout_toEndOf="@+id/iv_card_imager"
            android:textSize="20sp"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_sampledr"
            android:src="@drawable/ic_calendar"
            android:tint="@color/colorAccent"
            android:layout_below="@id/name_conf_cardr"
            android:layout_toEndOf="@+id/iv_card_imager"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sampledr"
            android:layout_toEndOf="@+id/iv_sampledr"
            android:layout_alignBottom="@+id/iv_sampledr"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_weight"
            android:id="@+id/iv_shownr"
            android:tint="@color/colorAccent"
            android:layout_below="@id/iv_sampledr"
            android:layout_toEndOf="@+id/iv_card_imager"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shownr"
            android:layout_toEndOf="@+id/iv_shownr"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/iv_shownr"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>