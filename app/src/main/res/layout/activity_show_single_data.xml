<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polito.cesarldm.tfg_bitadroidbeta.ShowSingleDataActivity">

    <Button
        android:id="@+id/btn_SSDA_Start"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:text="Start"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/btn_SSDA_Stop"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_SSDA_Stop"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:text="Pause"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_SSDA_Start"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintVertical_bias="1.0" />
    <Button
        android:id="@+id/btn_SSDA_end"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:text="Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn_SSDA_Stop"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/btn_SSDA_Stop"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"

        android:layout_marginTop="8dp"
        android:format="%s"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintLeft_toRightOf="@+id/btn_SSDA_end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />

    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="209dp"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/relativeLayout_SSDA"
        tools:layout_editor_absoluteX="-4dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="218dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_SSDA_Start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_SSDA"
        android:id="@+id/relativeLayout"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/tv_SSDA_maxY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAX Value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tv_SSDA_minY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIN Value"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_SSDA_maxY"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/tv_SSDA_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AVG Value"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_SSDA_minY"/>

        <TextView
            android:id="@+id/tv_SSDA_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_below="@id/tv_SSDA_maxY"
            android:text="Selected Value" />

        <SeekBar
            android:id="@+id/sb_SSDA_aboveTH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_below="@id/tv_SSDA_selected"
            android:layout_toEndOf="@+id/tv_SSDA_avg"
            android:layout_alignEnd="@+id/tv_SSDA_avg" />
        <TextView
            android:id="@+id/tv_SSDA_sb_value"
            android:layout_below="@id/tv_SSDA_selected"
            android:layout_toRightOf="@id/sb_SSDA_aboveTH"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:layout_alignBottom="@+id/sb_SSDA_aboveTH" />

        <TextView
            android:id="@+id/tv_SSDA_latlon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/sb_SSDA_aboveTH"
            android:layout_margin="10dp"
            android:text="Location:" />
        <Button
            android:id="@+id/bt_SSDA_map"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="M"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>>

    </android.support.constraint.ConstraintLayout>



